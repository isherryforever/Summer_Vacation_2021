<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/btn1"
            style="@style/dialogmoreStyle"
            android:background="#00FFFFFF"
            android:drawableTop="@mipmap/camera"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="查看监控"
            />
        <TextView
            android:id="@+id/btn2"
            style="@style/dialogmoreStyle"
            android:drawableTop="@mipmap/weather"
            android:layout_margin="15dp"
            android:background="#00FFFFFF"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="查询天气"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/btn3"
            style="@style/dialogmoreStyle"
            android:background="#00FFFFFF"
            android:drawableTop="@mipmap/wendu"
            android:layout_margin="15dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="温度：" />
        <TextView
            android:id="@+id/btn4"
            style="@style/dialogmoreStyle"
            android:drawableTop="@mipmap/water"
            android:layout_margin="15dp"
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="湿度："/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/btn5"
            style="@style/dialogmoreStyle"
            android:background="#00FFFFFF"
            android:drawableTop="@mipmap/smoke"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="烟雾：" />
        <TextView
            android:id="@+id/btn6"
            style="@style/dialogmoreStyle"
            android:drawableTop="@mipmap/motor"
            android:layout_margin="15dp"
            android:background="#00FFFFFF"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="风扇：OFF"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn7"
            style="@style/dialogmoreStyle"
            android:background="#00FFFFFF"
            android:drawableTop="@mipmap/people"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:text="开发者" />
        <TextView
            android:id="@+id/btn8"
            style="@style/dialogmoreStyle"
            android:drawableTop="@mipmap/quit"
            android:textColor="#000000"
            android:layout_margin="15dp"
            android:background="#00FFFFFF"
            android:textStyle="bold"
            android:text="退出登录"/>
    </LinearLayout>
    <TextView
        android:id="@+id/time"
        android:background="#50FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:text="更新时间"
        android:gravity="center_horizontal">
    </TextView>
    <TextView
        android:gravity="center"
        android:background="#901296DB"
        android:textColor="#FFFFFF"
        android:id="@+id/btn11"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="获取数据"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_below="@+id/dataline"
        android:layout_marginTop="20dp">
    </TextView>

    <TextView
        android:gravity="center"
        android:background="#901296DB"
        android:text="网页跳转"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:id="@+id/btn12"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:layout_alignRight="@+id/btn"
        android:layout_below="@+id/btn"
        android:layout_marginTop="20dp"/>


</LinearLayout>
